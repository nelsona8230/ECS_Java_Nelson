import java.util.Scanner;
public class UserInOfData 
{
	public static void main(String[] args)
	{
		Scanner keyboard = new Scanner(System.in);
		
		String fname lname;
		int age;
		double sal;
		
		System.out.print("First name:");
		name = keyboard.next();
		
		System.out.print("Hi, "+name+ " how old are you?" );
		age = keyboard.nextInt();
		
		System.out.print("So you are " +age+ "? I guess that's not too old," +age+ ".");
		System.out.print("How much do you make per hour?");
		sal = keyboard.nextDouble();
		System.out.print("Wow, " +sal+ " is a lot for your age!");
	}
}
